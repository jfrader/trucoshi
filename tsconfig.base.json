{
  "compilerOptions": {
    "target": "es2015",
    "module": "ESNext",
    "lib": ["es6", "dom"],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": ["src/**/*", "etc/scripts/autoplay.ts", "etc/scripts/play.ts", "etc"],
  "exclude": ["node_modules", "dist", "test"]
}
